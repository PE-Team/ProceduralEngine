#version 150 core

in vec2 position;

out vec4 vertexColor;

uniform mat3 transformation;

uniform vec4 backgroundColor;
uniform vec4 foregroundColor;
uniform int borderRadius;
uniform int borderWidth;
uniform vec4 borderColor;

void main() {
    vertexColor = backgroundColor;
    vec3 relativePosition = vec3(position.x, position.y, 1.0);
    vec3 finalPosition = transformation * relativePosition;
    gl_Position = vec4(finalPosition, 1.0);
}